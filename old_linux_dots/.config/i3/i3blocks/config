# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# command=/usr/lib/i3blocks/$BLOCK_NAME
command=/home/ikigai/.config/i3/blocks/$BLOCK_NAME
separator_block_width=20
markup=none


# Key indicators (CAPS)
[keyindicator]
instance=CAPS
color=#ac4142
interval=once
signal=11
separator=false

